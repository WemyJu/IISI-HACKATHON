<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.firsttry.firsttry.CheckProgress">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView13"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1.6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="挑戰"
            android:id="@+id/mission_per"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1.3"
            android:textSize="150dp"
            android:textAlignment="center"
            android:textColor="@color/app_yellow"
            android:textStyle="bold"
            android:textIsSelectable="true"
            android:gravity="bottom" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="為了讓生活更有意義，不是只有活著"
            android:id="@+id/textView18"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1.75"
            android:phoneNumber="true"
            android:textColor="@color/app_dark_green"
            android:textStyle="bold"
            android:textIsSelectable="true"
            android:textSize="20dp"
            android:gravity="top" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.6">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView19"
                android:layout_weight="2" />

            <ProgressBar
                style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/progressBar"
                android:max="100"
                android:minHeight="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.4" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView20"
                android:layout_weight="2" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1.5">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView14"
                android:layout_weight="2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView16"
                android:layout_weight="2"
                android:text="平\n均"
                android:gravity="left"
                android:textStyle="bold"
                android:textColor="@color/app_dark_green" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView21"
                android:layout_weight="2"
                android:text="天\n數"
                android:gravity="center_horizontal"
                android:textColor="@color/app_dark_green"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView22"
                android:layout_weight="2"
                android:text="關\n注"
                android:gravity="right"
                android:textStyle="bold"
                android:textColor="@color/app_dark_green" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView17"
                android:layout_weight="2" />

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/my_progress_btn"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1.4"
            android:src="@drawable/my_process" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/health_info_btn"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1.4"
            android:src="@drawable/health_info" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView15"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1.6" />
    </LinearLayout>

</FrameLayout>
